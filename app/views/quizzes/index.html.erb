<%= render 'quizzes/welcome' %>

<h3>Available Quizzes</h3>

<% if @quizzes.blank? %>
  <p>There are no quizzes yet.  Be the first to create one!</p>
<% else %>
  <% @quizzes.each_slice(3) do |quizzes| %>
    <div>
      <% quizzes.each do |quiz| %>
        <div class=quiz_cell>
          <%= link_to quiz.name, quiz %><br>
          <%= link_to image_tag("http://i.ytimg.com/vi/#{quiz.video_id}/default.jpg"),
                      quiz %><br>
          Age: <%= quiz.min_age_years %>+<br>
          Country: <%= Country[quiz.country_alpha2].name %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Create a new quiz', new_quiz_path %>
